<script type="text/javascript">  
$(document).ready(function(){ 
	// Given two javascript timestamp (string or number)
	// return the number of months elapsed between the two.
		var getTimstampDifferenceInMonths = function(timestamp1, timestamp2) {
		var ts1 = parseInt(timestamp1, 10);
		var ts2 = parseInt(timestamp2, 10);
		var tsDiff = ts2 - ts1;		
		var monthsDiffs = Math.floor(tsDiff / (1000 * 60 * 60 * 24 * 30)); //javascript timestamp are in milliseconds
		return monthsDiffs;

	}
	
	// Check cookies to decide if the newsletter overlay must be shown or not.
	// To be called once at page load.
    function checkNewsletterOverlayToBeShown() {    
    	//if (isMobile) {
    	//	return false;
    	//}
	    
	    // at the first landing on the site the overlay is not shown, 
	    // but the cookie "NEWSLETTER_OVERLAY_FIRST_TIME_VISIT" is set to "false", 
	    // so that, next time we know that the user is elegible to be shown the overlay.
	   	var firstTimeVisit =readCookie('NEWSLETTER_OVERLAY_FIRST_TIME_VISIT');
	   	if (firstTimeVisit === null) {
	   		firstTimeVisit = 'true';
	   		setCookie('NEWSLETTER_OVERLAY_FIRST_TIME_VISIT', 'false');
	   	}
	   		   	
	   	// Every time the user sees the newsletter overlay, I increment the cookie "NEWSLETTER_OVERLAY_SEEN_COUNTER" ++.   	
	   	// In case the user has already seen the overlay two times, but it was at least three months ago, then he should see the banner.
	   	var seenCounter =readCookie('NEWSLETTER_OVERLAY_SEEN_COUNTER');
	   	var seenTimestamp =readCookie('NEWSLETTER_OVERLAY_SEEN_TIMESTAMP');
	   	var nowTimestamp = new Date().getTime();
	   	if (seenCounter === null || getTimstampDifferenceInMonths(seenTimestamp, nowTimestamp) >= 3) {   	 
	   		seenCounter = 0;
	   	} else {
	   		seenCounter = parseInt(seenCounter);
	   	}
	   	
	   	var subscriptionCompleted =readCookie('NEWSLETTER_SUBSCRIPTION_COMPLETED');
	   	if (subscriptionCompleted !== 'true' && firstTimeVisit !== 'true' && seenCounter < 2) {
	   		
	   		// Show the overlay
	   		openNewsletterOverlay();
			
	   		seenCounter++;
	
	   		// Save the date when the user saw the overlay for the last time
	   		setCookie('NEWSLETTER_OVERLAY_SEEN_TIMESTAMP', nowTimestamp);	   		
	   	}	   	
	   	
	   	//update/reset the seen counter cookie	   	
		setCookie('NEWSLETTER_OVERLAY_SEEN_COUNTER', seenCounter);	   	
   	}
   	   	
   	// Actually shows the newsletter overlay
   	function openNewsletterOverlay() {  
   		setTimeout(function() { 		   		
        	$.magnificPopup.open({ items: { src: '#nl-modal' }, type: 'inline' }, 0);
        },0);
   	}
   	
   	// Initial setup of privacy overlay content
   	// that will be shown from within the newsletter overlay
   	function setupPrivacyOverlay() {
   		$('#nl-modal').after($('#informativa-privacy-popup'));
   		
   		// Alternative method: using events
		// Name of event should start from  `mfp` and the first letter should be uppercase.
		// e.g. 'open' becomes 'mfpOpen', 'beforeOpen' becomes 'mfpBeforeOpen'.
		$(document).on('mfpClose', function(e) {
			if ($.magnificPopup.instance.content.is('#informativa-privacy-popup')) {
				openNewsletterOverlay();
			}
		});
	}   	
  
   	
   	// Init
	//CustomCheckoutHelper.setCommonParameters('-4','10151','10051');		
	
	MessageHelper.setMessage("NEWSLETTER_INVALIDMAIL", "Attenzione! Inserisci un indirizzo e-mail valido");			
	
	MessageHelper.setMessage("NEWSLETTER_PRIVACY", "Per ricevere la newsletter di euronova Ã¨ necessaria la tua autorizzazione al trattamento dei tuoi dati personali.");	
   	
	setupPrivacyOverlay();
 	checkNewsletterOverlayToBeShown();       		
});

CustomCheckoutHelper={

	/* Global variable declarations */
	
	/** 
	 * This variable stores the ID of the language that the store currently uses. Its default value is set to -1, which corresponds to United States English.
	 * @private
	 */
	langId: '-1',
	
	/** 
	 * This variable stores the ID of the current store. Its default value is empty.
	 * @private
	 */
	storeId: '',
	
	/** 
	 * This variable stores the ID of the catalog. Its default value is empty.
	 * @private
	 */
	catalogId: '',
	
	/**
	 * This variable stores the ID of the order, in case the current shopping cart is not being used. Its default value is empty.
	 */
	 orderId: '',
	
	 saveCheckoutOrderParameters:function(orderId,storeId,catalogId,langId){
			this.langId = langId;
			this.storeId = storeId;
			this.catalogId = catalogId;
			this.orderId = orderId;
		},
	 
		/**
		 * This function is used to submit the order by invoking the <code>AjaxSubmitOrder</code> service.
		 *
		 * @param {Integer} orderId The order ID.
		 * @param {String} userType The type of the current user.
		 * @param {String} addressListForMailNotification The list of emails separated by space. Order confirmation will be sent to these emails.
		 * @param {boolean} isQuote Optional parameter which indicates whether it is a Quote that is being checked out. If this parameter is not passed then it defaults to false.
		 */
		checkoutOrder:function(orderId,userType,addressListForMailNotification,isQuote,paymentMethod){
			
			if (isQuote == undefined || isQuote == null){
				isQuote = false;
			}
			if (paymentMethod == undefined || paymentMethod == null) {
				paymentMethod = "";
			}
			if (this.isOrderPrepared() == "false") {
				if (this.isOrderPaymentFullyAllocated()) {
					this.saveCheckoutOrderParameters(orderId,userType,addressListForMailNotification,isQuote);
// 					wcService.invoke("AjaxPrepareOrderForSubmit");
					return;
				} else {
					return;
				}
			}
			
			params = [];
			params["orderId"] = orderId;
			params["notifyMerchant"] = 1;
			params["notifyShopper"] = 1;
			params["notifyOrderSubmitted"] = 1;
			params["storeId"] = this.storeId;
			params["catalogId"] = this.catalogId;
			params["langId"] = this.langId;
			
			if (paymentMethod == "COD"){
				
				//For handling multiple clicks
				if(!submitRequest()){
					return;
				}                 
				cursor_wait();
				params["paymentMethod"] = "COD";
				wcService.invoke('AjaxCustomProcessOrder', params);
				
			} else if (paymentMethod == "CCARD" || paymentMethod == "PPAL") {

				//For handling multiple clicks
				if(!submitRequest()){
					return;
				}                 
				cursor_wait();
				params["paymentMethod"] = (paymentMethod == "CCARD") ? "CREDITCARDS" : "PAYPAL";		
				wcService.invoke("AjaxForwardParametersToPaymentProvider", params);
				
			} else {
				var purchaseOrderForm = document.forms["purchaseOrderNumberInfo"];
				if (purchaseOrderForm) {
					var purchaseOrderNumber = purchaseOrderForm.purchase_order_number.value; 
					if(purchaseOrderForm.purchaseOrderNumberRequired.value == 'true' && purchaseOrderForm.purchase_order_number.value == ""){
						MessageHelper.formErrorHandleClient(purchaseOrderForm.purchase_order_number,MessageHelper.messages["ERROR_PONumberEmpty"]);
						return;
					}
					else if(!MessageHelper.isValidUTF8length(purchaseOrderForm.purchase_order_number.value, 128)){
						MessageHelper.formErrorHandleClient(purchaseOrderForm.purchase_order_number,MessageHelper.messages["ERROR_PONumberTooLong"]);
						return;
					}
				}
		params["purchaseorder_id"] = purchaseOrderNumber;
				if(userType == 'G'){
					//addressListForMailNotification contains list of emailId's spearated by space.. remove leading or trailing spaces..
					addressListForMailNotification = trim(addressListForMailNotification);
					
					//Get the space separated email list in an array...
					var emailList = [];
					emailList = addressListForMailNotification.split(" ");
					
					//Now from this array, remove repeated email Id's.. keep only unique email Id's
					var uniqueList = [];
					for(var j = 0; j < emailList.length; j++){
						uniqueList[emailList[j]] = emailList[j];
					}
					
					//Get the total length of unique email id's list..
					var totalLength = 0;
					for(i in uniqueList){
						totalLength = totalLength + 1;
					}
					
					//Convert the unique List array into comma separated values...
					var temp = "";
					var k = 0;
					for(i in uniqueList){
						k = k + 1;
						temp = temp + uniqueList[i];
						if( k < totalLength){
							//If not last value, add , before next value..
							temp = temp + ",";
						}
					}
					//For guest user send the email list..
					params["notify_EMailSender_recipient"] = temp;
					
					//setup sms phone for service
					var smsOrderNotificationCheckbox = document.getElementById("sendMeSMSNotification");
					if (smsOrderNotificationCheckbox != null && smsOrderNotificationCheckbox != "undefined") {
						if (smsOrderNotificationCheckbox.checked) {
							var mobileCountryCode = document.getElementById("mobileCountryCode");
							var mobilePhone1 = document.getElementById("mobilePhone1");
							if (mobileCountryCode != null && mobileCountryCode != "undefined" && mobilePhone1 != null && mobilePhone1 != "undefined") {
								params["SMS"] = mobileCountryCode.value + mobilePhone1.value;
							}
						}
					}
				}
								//For handling multiple clicks
				if(!submitRequest()){
					return;
				}                 
				cursor_wait();
				
				if (!isQuote){
					wcService.invoke("AjaxSubmitOrder",params);
				} else{
					params["URL"] = "";
					this.setOrderId(orderId);
					wcService.invoke("AjaxSubmitQuote",params);
				}
			}
		},
		
		/**
		 * This function is used to submit the order by invoking 
		 * the <code>AjaxCustomProcessOrder</code> service.
		 *
		 * @param {Integer} orderId The order ID.
		 **/
		callAjaxCustomProcessOrder:function(orderId){
				
				params = [];
				params["orderId"] = orderId;
				params["notifyMerchant"] = 1;
				params["notifyShopper"] = 1;
				params["notifyOrderSubmitted"] = 1;
				params["storeId"] = this.storeId;
				params["catalogId"] = this.catalogId;
				params["langId"] = this.langId;
	
				wcService.invoke('AjaxCustomProcessOrder', params);
		},
		
		/**
		 * This function is used to submit the newsletter registration by invoking 
		 * the <code>AjaxNewsletterRegCmd</code> service.
		 *
		 * @param {Object} formName The form which contains the input email element.
		 **/
		checkoutInput: function(formName)
		{
			var form1 = document.forms[formName];
			var customPrivacy = document.getElementById("custom_privacy");
			if (customPrivacy.checked) {
				var email = form1["email1"].value;
				if (email && email.length>0){
					if (MessageHelper.isValidEmail(email)){
						// se la validazione email  ok -> richiamo un comando ajax
						params = [];
						params.formName = formName;
						params["storeId"] = this.storeId;
						params["catalogId"] = this.catalogId;
						params["langId"] = this.langId;
						params["email1"] = email;
						/*params["ipAddress"] = CustomGeolocationJS.getLocationAddress();*/
						
						//For handling multiple clicks
						if(!submitRequest()){
							return;
						}                 
						cursor_wait();
						
						//wcService.invoke("AjaxNewsletterRegCmd",params);
					} else {
						// messaggio utente di email non corretta
						MessageHelper.formErrorHandleClient(form1["email1"].id, MessageHelper.messages["NEWSLETTER_INVALIDMAIL"]);
					}
				} else {
					// messaggio utente di immissione della mail
					MessageHelper.formErrorHandleClient(form1["email1"].id, MessageHelper.messages["NEWSLETTER_INVALIDMAIL"]);
				}
			} else {
				if(document.getElementById("custom_privacy_yes")) {
					MessageHelper.formErrorHandleClient('custom_privacy_yes', MessageHelper.messages["NEWSLETTER_PRIVACY"]);
				} else {
					MessageHelper.formErrorHandleClient(form1["custom_privacy"].id, MessageHelper.messages["NEWSLETTER_PRIVACY"]);
				}
			}
		},
		/**
		 * This function is used to submit the newsletter cancellation by invoking 
		 * the <code>AjaxNewsletterCancCmd</code> service.
		 *
		 * @param {Object} formName The form which contains the input email element.
		 **/
		newsletterCancellation: function(formName)
		{
			submitLoaderRequest(); 
			showProgressBar(); 
			
			var form1 = document.forms[formName];
			var email = form1["email1"].value;
			if (email && email.length>0){
				if (MessageHelper.isValidEmail(email)){
					// se la validazione email ok -> richiamo un comando ajax
					params = [];
					params.formName = formName;
					params["storeId"] = this.storeId;
					params["catalogId"] = this.catalogId;
					params["langId"] = this.langId;
					params["email1"] = email;
					
					//For handling multiple clicks
					if(!submitRequest()){
						return;
					}                 
					cursor_wait();
					
					wcService.invoke("AjaxNewsletterCancCmd",params);
				} else {
					// messaggio utente di email non corretta
					MessageHelper.displayErrorMessage(MessageHelper.getMessage("NEWSLETTER_INVALIDMAIL"));
					resetLoaderRequest();
					hideProgressBar();
				}
			} else {
				// messaggio utente di immissione della mail
				MessageHelper.displayErrorMessage(MessageHelper.getMessage("NEWSLETTER_INVALIDMAIL"));
				resetLoaderRequest();
				hideProgressBar();
			}
		},
		
		/**
		 * This function handles the service response which the ajax command generates. 
		 * 
		 * @param {Property}
		 *            serviceResponse The response message properties filled by tha Ajax command.
		 */
		newsLetterRegResponse: function(serviceResponse)
		{
			if (serviceResponse.myErrorMessage != "") {
				var formName = serviceResponse.formName;
				var form1 = document.forms[formName];
				MessageHelper.formErrorHandleClient(form1["email1"].id, serviceResponse.myErrorMessage);
			} else {
				var $newsletterFormPopup = $('#newsletter_form_popup');
				if ($newsletterFormPopup.size() > 0) {
					$newsletterFormPopup.hide();
					$('#newsletter_istruzioni_popup').show();
				} else {				
					var hostName = document.getElementById("hostName");
					if (hostName != null) {					
						document.location.href=hostName.value+"/webapp/wcs/stores/servlet/NewsletterWelcomeView?langId="+CustomCheckoutHelper.langId+"&storeId="+CustomCheckoutHelper.storeId+"&catalogId="+CustomCheckoutHelper.catalogId;					
					} else {					
						document.location.href="NewsletterWelcomeView?langId="+CustomCheckoutHelper.langId+"&storeId="+CustomCheckoutHelper.storeId+"&catalogId="+CustomCheckoutHelper.catalogId;
					}
				}
			}
		},
		
		/**
		 * This function handles the service response which the ajax command generates. 
		 * 
		 * @param {Property}
		 *            serviceResponse The response message properties filled by tha Ajax command.
		 */
		newsLetterUnregResponse: function(serviceResponse)
		{
			if (serviceResponse.ErrorMessage)
				MessageHelper.displayErrorMessage(serviceResponse.ErrorMessage);
			if (serviceResponse.myErrorMessage != "") {
				var formName = serviceResponse.formName;
				var form1 = document.forms[formName];
				MessageHelper.formErrorHandleClient(form1["email1"].id, serviceResponse.myErrorMessage);
			} else {
				document.location.href="NewsletterUnregWelcomeView?langId="+CustomCheckoutHelper.langId+"&storeId="+CustomCheckoutHelper.storeId+"&catalogId="+CustomCheckoutHelper.catalogId;
			}
		},
		
		/**
		 * Funzione che setta i valori principali di storeId, languageId, catalogId
		 */
		setCommonParameters: function(langId, storeId, catalogId){
			this.langId = langId;
			this.storeId = storeId;
			this.catalogId = catalogId;
		}
}

